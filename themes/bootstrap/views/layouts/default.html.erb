	  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=284541418224237&version=v2.0";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	<div class="container" style="background: #1F3D5C; margin-top: 2em">
		<div class="page-header">
			<h1><%= link_to(this_blog.blog_name, this_blog.base_url) %></h1>
			<p class="subtitle"><%= this_blog.blog_subtitle %></p>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-3 hidden-sm hidden-xs">
				<%= render 'shared/sidebar' %>
			</div>
			<div class="col-md-9 col-sm-12 col-xs-12">
				<p><div class="alert alert-success" style="text-align: center"><a href="https://www.udemy.com/finding-booking-cheap-flights/?couponCode=SLCFLTDL" target="_blank">Click here to take 67% off my online course that shows you how I find the great deals for this website,<br/>how airfare pricing works, and several secrets and tricks that will save you huge amounts on airfare!</a></div></p>
				<%= yield %>
			</div>
		</div>
	</div>
	<div class="page-footer"><h6 class="text-center">Copyright &copy;<%= Time.now.year %> SLC Flight Deals</h6></div>
<script type="text/javascript">
   /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
